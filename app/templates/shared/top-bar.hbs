<div class="fixed">
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><a href="#"><i class="fa fa-paw"></i> Fetch</a></h1>
      </li>
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        {{#if session.currentUser}}
        Welcome {{session.currentUser.name}}
        {{else}}
        {{#if session.isWorking}}
        One sec while we get you signed in...
        {{else}}
        {{error}}
        <li class="name">
          <i class="fa fa-3x fa-linkedin-square fa-inverse" onmouseover="" style="cursor: pointer;"{{action 'signInViaLinkedin'}}></i> 
          </li>     
        {{/if}}  
        {{/if}}

      </ul>

      <!-- Left Nav Section -->

    </section>
  </nav>
</div>



